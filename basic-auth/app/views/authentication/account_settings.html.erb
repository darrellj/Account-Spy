<h3>Account Settings</h3>

<table>
  <tr>
    <td>Username:</td>
    <td>&nbsp&nbsp<%=current_user.username%></td>
  </tr>
  <tr>
    <td>Email:</td>
    <td>&nbsp&nbsp<%=current_user.email%></td>
  </tr>
</table>
<br />
<table>
  <%= form_for @user, :as => :user, :url => account_settings_path, :method => :put do |f| %>

  <tr>
    <td>
      <%= f.label 'Current password:' %>
    </td>
    <td>
      <%= f.password_field :password %>
    </td>
    <td>
      <%= show_field_error(@user, :password) %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label 'New password:' %>
    </td>
    <td>
      <%= f.password_field :new_password %>
    </td>
    <td>
      <%= show_field_error(@user, :new_password) %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label 'Password confirmation:' %>
    </td>
    <td>
      <%= f.password_field :new_password_confirmation %>
    </td>
    <td>
      <%= show_field_error(@user, :new_password_confirmation) %>
    </td>
  </tr>

</table>
<br />

    <%= f.submit 'Update' %>&nbsp&nbsp
    <%= f.submit 'Clear Form', :type => 'reset' %>
  <% end %>